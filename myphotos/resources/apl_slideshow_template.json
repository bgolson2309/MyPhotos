{
    "type": "APL",
    "version": "1.4",
    "settings": {},
    "theme": "dark",
    "import": [],
    "resources": [],
    "styles": {},
    "onMount": [],
    "graphics": {},
    "commands": [
        {
        "type": "AutoPage",
        "componentId": "myPager",
        "duration": 4000,
        "delay": 3000,
        "when": true
        }
    ],
    "layouts": {},
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "width": "100vw",
                "height": "100vh",
                "items": [
                    {
                        "type": "Pager",
                        "id": "myPager",
                        "width": "100vw",
                        "height": "100vh",
                        "items": [
                            {
                                "type": "Container",
                                "width": "100vw",
                                "height": "100vh",
                                "items": [
                                    {
                                        "type": "Image",
                                        "width": "100vw",
                                        "height": "100vh",
                                        "scale": "best-fit",
                                        "align": "center",
                                        "source": "${data.image}"
                                    }
                                ]
                            }
                        ],
                        "data": "${payload.data.properties.values}"
                    }
                ]
            }
        ]
    }
}